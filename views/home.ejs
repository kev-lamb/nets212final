<!DOCTYPE html>
<html>
    <head>
        <title>Home</title>
        <link
            rel="stylesheet"
            href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
        />
        <script
            type="text/javascript"
            src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"
        ></script>
        <script src="home.js"></script>
        <style>
            body {
                padding-top: 40px;
                padding-bottom: 40px;
                background-color: white;
            }
            .main-box {
                width: 330px;
                margin: 0 auto;
            }
        </style>
    </head>
    <body>
        <div class="main-box">
            <a href="/account">My Profile</a>
            <br />
            <table>
                <tr>
                    <th>Poster</th>
                    <th>Time</th>
                    <th>Content</th>
                </tr>
                <% posts.forEach(function(item) { %>
                <tr>
                    <td><%= item.poster.S %></td>
                    <td><%= item.time.S %></td>
                    <td><%= item.content.S %></td>
                </tr>
                <% }); %>
            </table>
            <br />
            <a href="/search">Search Users</a>
            <br />
            <a href="/friends">See Friends</a>
            <br />
            <a href="/friendvisualizer">Visualize your friends!</a>
            <br />
            <a href="/signout">Sign Out</a>
            <br />
            <a href="/testchat">Chats</a>
        </div>
    </body>
</html>
